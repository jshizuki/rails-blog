<div class="container mt-3">
  <ul class="list-unstyled">
    <li class='fs-2'>
      <%= @article.title %>
      <%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this entry?'} do %>
        <i class="fa-solid fa-eraser"></i>
      <% end %>
    </li>
    <li class='fs-5'><%= @article.content %></li>
  </ul>
  <%= link_to "Back", articles_path, class: "text-decoration-none link-secondary" %>
</div>
